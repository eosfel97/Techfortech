{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="container loggin_reset"> 
      <h1 class="h1-top">réinitialisation de mot de passe :</h1>

    {{ form_start(requestForm) }}
        {{ form_widget(requestForm.email) }}
        <div class="mt-2">
            <small>
        Veuillez saisir l'adresse email utilisée dans votre compte client pour recevoir un lien de réinitialisation de mot de passe.
            </small>
        </div>
        <div class="container loggin_reset_btn">  <button class="btn btn-lg btn-primary">VALIDER</button></div>

    {{ form_end(requestForm) }}
    </div>
{% endblock %}
