<style>
	.img_filter {
		height: 50px;
		width: 50px;
	}
</style>

<table class="table">
	<tbody>
		<tr>
			<td><img src="/upload/images/products/{{product.file}}" class="img_filter"/></td>
			<td>
				<a href="{{ path('product_show', {'id': product.id}) }}">{{product.name}}</a>
			</td>
			<td>{{product.price | price}}</td>
			<td class="text-center">
				<a href="{{path('cart_add',{'id': product.id} )}}" class="btn btn-primary mt-3">Add to Cart</a>
			</td>
		</tr>
	</tbody>
</table>
