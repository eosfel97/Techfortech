{% extends 'base.html.twig' %}

{% block body %}
	<style>
		#item_tiem {
			margin-top: 150px;
		}
	</style>

	<section id="item_tiem">
		<div class="container">
			<div class="row g-0">
				<div class="container d-flex justify-content-arround align-items-center ">
					<div class="container">
						<h1 class="text-center">{{product.name}}</h1>
						<img src="/upload/images/products/{{product.file}}" style="width:300px;height: 300px;" alt="" class="card-img-top">
					</div>
					<div class="container">
						<div class="conatiner">
							<h1 class="">{{product.price/100 | number_format(0, ',', '')}}
