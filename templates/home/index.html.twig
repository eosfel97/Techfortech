{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}


	{# hearder #}
	<header id="header" class=" carousel slide" data-bs-ride="carousel" style="padding-top: 104px;">

		<div id="carouselExampleIndicators" class="carousel slide    " data-bs-ride="carousel">

			<div class="carousel-indicators">
				<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
				<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
				<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
			</div>
			<div class="carousel-inner">
				<div class="carousel-item active">
					<a href="#">
						<img src="/upload/images/products/15832_b.jpg" class="d-block w-100" alt="..."/>
					</a>
				</div>
				<div class="carousel-item">
					<a href="#">
						<img src="/upload/images/products/15855_b.jpg" class="d-block w-100" alt="..."/>
					</a>
				</div>
				<div class="carousel-item">
					<a href="#">
						<img src="/upload/images/products/15888_b.jpg" class="d-block w-100" alt="..."/>
					</a>
				</div>
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>
		</div>
	</header>
	{# end of hearder #}
	{#  cattegory collection #}
	<main>
		<section id="collection" class="py-5">
			<div class="container">
				<div class="title text-center">
					<h2 class="position-relative d-inline-block">CATÉGORIES POPULAIRES</h2>
				</div>
				<div class="row g-0">
					<div class="collection-list mt-4 row gx-0 gy-3">
						<div class="col-md-6 col-lg-4 col-xl-3 p-2 ">
							<div class="collection-img position-relative">
								<img src="/upload/images/products/LD0005869780_1.jpg" class="w-100">
							</div>
							<div class="text-center">
								<p class="text-capitalize my-1">COMPOSANTS</p>
							</div>
						</div>
						<div class="col-md-6 col-lg-4 col-xl-3 p-2 ">
							<div class="collection-img position-relative">
								<img src="/upload/images/products/LD0005776729_1.jpg" class="w-100">
							</div>
							<div class="text-center">
								<p class="text-capitalize my-1">PÉRIPHÉRIQUES PC</p>
							</div>
						</div>
						<div class="col-md-6 col-lg-4 col-xl-3 p-2 ">
							<div class="collection-img position-relative">
								<img src="/upload/images/products/LD0005871582_1.jpg" class="w-100">
							</div>
							<div class="text-center">
								<p class="text-capitalize my-1">ORDINATEUR DE BUREAU</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		{#  end cattegory collection #}
		{#  product collection #}
		<section id="product" class="py-5">
			<div class="container">
				<div class="title text-center">
					<h2 class="position-relative d-inline-block">NOS PRODUIRES</h2>
				</div>
				<div class="row g-0">
					<div class="product-list mt-4 row gx-0 gy-3">

						{% for product in products %}
							{% include 'product/_card.html.twig' with {product:product} only%}
						{% endfor %}
					</div>
				</div>
			</div>
		</section>
		{#  end product collection #}
	</main>


{% endblock %}
