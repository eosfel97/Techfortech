					<div class=" NPR2">
						<a href="{{ path("product_index")}}" class="btn btn-primary ">Voir +</a>
					</div>
				</div>
				<div class="row g-0">
					<div class="product-list mt-4 row gx-0 gy-3">

						{% for product in products %}
							{% include 'product/_card.html.twig' with {product:product} only%}
						{% endfor %}
					</div>
				</div>
			</div>
		</section>
