{% extends 'base.html.twig' %}

{% block title %}New order
{% endblock %}

{% block body %}
	<style>
		#ShopFinal {
			margin-top: 150px;
		}
	</style>
	<section id="ShopFinal" class="py-1">
		<div class="container">
			<div class="row g-0">

				<div class="title text-center">
					<h2 class="position-relative d-inline-block py-2">récapitulatif de la commande</h2>
				</div>
				<table class="table">
					<thead>
						<tr>
							<th>Produit</th>
							<th>Prix</th>
							<th>Quantité</th>
							<th>Total</th>
						</tr>
					</thead>
					<tbody>
						{% for item in items %}
							<tr>
								<td>{{item.product.name}}</td>
								<td>{{item.product.price | price}}</td>
								<td>{{item.quantity}}</td>
								<td>{{(item.product.price  * item.quantity) | price }}</td>
							</tr>
						{% endfor %}
					</tbody>
					<tfoot>
						<tr class="tt">
							<td colspan="3">TOTAL :</td>
							<td>{{total | price}}</td>
							<td></td>
						</tr>
					</tfoot>
				</table>
				<div class="title text-center">
					<h2 class="position-relative d-inline-block py-2">ADRESSE DE LIVRAISON</h2>
				</div>

				{{ form_start(form) }}
				{{ form_widget(form) }}
				<div class=" text-center">
					<button class="btn btn-dark btn-lg text-center">{{ button_label|default('Confirm') }}</button>
				</div>
				{{ form_end(form) }}
			</div>
		</section>
	{% endblock %}
